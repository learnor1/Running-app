.up_me {
  width: 100vw;
  height: 100vh;
}
.up_me .font_style {
  margin: 3vw 0 0 3vw;
  font-size: 30rpx;
}
.up_me .image_btn {
  width: 15vh;
  height: 15vh;
  line-height: 15vh;
  margin-left: 25vw;
  text-align: center;
  font-size: 100rpx;
  color: #ccc;
  float: right;
  border: 1rpx dotted #ccc;
  border-radius: 20%;
}
.up_me .update_btn {
  width: 80vw;
  position: absolute;
  left: 10vw;
  bottom: 5vh;
}
.wrapper {
  width: 500rpx;
  height: 300rpx;
  background-color: #fff;
  border-radius: 30rpx;
  margin: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  align-items: center;
}
.wrapper .contant {
  text-align: center;
  padding: 50rpx;
  font-size: 40rpx;
}